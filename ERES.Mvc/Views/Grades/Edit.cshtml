@model ERES.Mvc.Models.GradesModels.EditClass

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<div class="row">
    <div id="gradesForm" class=" col-md-6 col-md-offset-3">

      
        @using (Html.BeginForm())
        {
    

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Grades</legend>

                <div class="form-group">
                    @Html.LabelFor(model => model.grade.GradeID)

                    @Html.TextBoxFor(model => model.grade.GradeID, new { @class = "form-control", @readonly = "" })
                    @Html.ValidationMessageFor(model => model.grade.GradeID)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.grade.RealisationID)
                    @Html.DropDownListFor(model => model.grade.RealisationID, Model.realisationList, new { @class = "form-control", })
                    @Html.ValidationMessageFor(model => model.grade.RealisationID)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.grade.Name)

                    @Html.TextBoxFor(model => model.grade.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.grade.Name)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.grade.MaxValue)

                    @Html.TextBoxFor(model => model.grade.MaxValue, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.grade.MaxValue)
                </div>

                <p>
                    <input type="submit" value="Save" />
                </p>
            </fieldset>
        }
            <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    </div>
    <div class="col-md-3">
          @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
        { 
            <div class="alert alert-danger">
                <a class="close" data-dismiss="alert">&times;</a>
                @Html.ValidationSummary()
            </div>
        }
    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
